# Stage: install dependencies
FROM node:18-alpine AS deps
WORKDIR /app
COPY package*.json ./
RUN npm ci --only=production

# Stage: runtime
FROM node:18-alpine
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
# expose the port your Express server listens on
EXPOSE 3001
# start the backend
CMD ["node", "src/server/start.js"]
