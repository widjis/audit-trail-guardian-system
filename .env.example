
# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mti_onboarding
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_INSTANCE=
DB_ENCRYPT=false

# Server Configuration
PORT=3001

# JWT Secret (for authentication)
JWT_SECRET=your_secret_key_here

# Schema initialization settings
DB_INIT_SCHEMA=true
DB_DROP_TABLES=false

# Logging Configuration
# Log levels: debug, info, warn, error, none
LOG_LEVEL=info
# Component specific logging (true/false)
LOG_API=true
LOG_DB=true
LOG_UI=true

# Security Settings
# Number of salt rounds for password hashing (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10
